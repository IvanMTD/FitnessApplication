<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_exercises_struct"
        android:background="@color/black"
        android:padding="@dimen/dim_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="165dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <TextView
                android:id="@+id/tv_exercise_name"
                android:background="@color/mint_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_max"
                android:layout_gravity="center_vertical|start"
                android:padding="@dimen/dim_10"
                android:textSize="@dimen/s_dim_18"
                android:text="@string/name"
                app:fontFamily="@font/varela_round"
        />
        <TextView
                android:id="@+id/tv_exercise_info"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:textSize="@dimen/s_dim_16"
                android:textColor="@color/white"
                android:padding="@dimen/dim_10"
                android:text="@string/information"
                app:fontFamily="@font/varela_round"
                style="@style/TextAppearance.AppCompat.Title"
        />
    </LinearLayout>

    <ImageView
            android:id="@+id/iv_exercise_motivation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.509"
            app:layout_constraintEnd_toStartOf="@+id/iv_exercise_completed"
    />
    <ImageView
            android:id="@+id/iv_exercise_completed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>